<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    tools:context=".ui.establecimiento.inventario.RegistrarInventarioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressIndicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/registrar_inventario_subtitle"
            android:textColor="@color/fragment_subtitle_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inventarioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/registrar_inventario_inventario"
            android:textColor="@color/fragment_subtitle_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle" />

        <LinearLayout
            android:id="@+id/layoutEstadoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inventarioTitle">

            <TextView
                android:id="@+id/estadoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_novedad_estado"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/estadoLayout"
            style="@style/Widget.Coljuegos.TextInputLayout.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/seleccione_opcion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutEstadoTitle"
            app:endIconMode="dropdown_menu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/estadoSpinner"
                style="@style/Widget.Coljuegos.MaterialAutoCompleteTextView"
                android:dropDownWidth="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:completionThreshold="1"
                android:inputType="none"
                android:padding="15dp"
                android:textColor="@color/input_text_color"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cabecera - Marca y Serial (Títulos) -->
        <LinearLayout
            android:id="@+id/layoutCabeceraTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/estadoLayout">

            <TextView
                android:id="@+id/marcaTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_marca"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/serialTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_serial"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Cabecera - Marca y Serial (Valores) -->
        <LinearLayout
            android:id="@+id/layoutCabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCabeceraTitle">

            <TextView
                android:id="@+id/marcaValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_detail"
                android:textSize="16sp"
                tools:text="SIT" />

            <TextView
                android:id="@+id/serialValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_detail"
                android:textSize="16sp"
                tools:text="10000" />

        </LinearLayout>

        <!-- Código de Apuesta y NUC (Títulos) -->
        <LinearLayout
            android:id="@+id/layoutDataTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCabecera">

            <TextView
                android:id="@+id/codigoApuestaTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_apuesta"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nucTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_nuc"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Código de Apuesta y NUC (Valores) -->
        <LinearLayout
            android:id="@+id/layoutData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDataTitle">

            <TextView
                android:id="@+id/codigoApuestaValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_detail"
                android:textSize="16sp"
                tools:text="4" />

            <TextView
                android:id="@+id/nucValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_detail"
                android:textSize="16sp"
                tools:text="10000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutData">

            <TextView
                android:id="@+id/textoLegal1Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_1"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCheck1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal1Title">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/codigoApuestaDiferenteCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codigoApuestaDiferenteInputLayout"
            style="@style/Form.InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCheck1Title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/codigoApuestaDiferenteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/registrar_inventario_codigo_apuesta_diferente_valor"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/input_text_color"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codigoApuestaDiferenteInputLayout">

            <TextView
                android:id="@+id/textoLegal2Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_2"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCheck2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal2Title">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/serialVerificadoCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp"
                    android:checked="true"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serialDiferenteInputLayout"
            style="@style/Form.InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCheck2Title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serialDiferenteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/registrar_inventario_serial_diferente_valor"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/input_text_color"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal34Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serialDiferenteInputLayout">

            <TextView
                android:id="@+id/textoLegal3Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_3"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textoLegal4Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_4"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCheck34Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal34Title">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/descripcionJuegoCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp"
                    android:checked="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/planPremiosCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal5Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCheck34Title">

            <TextView
                android:id="@+id/textoLegal5Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_5"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCheck5Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal5Title">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/valorPremiosCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp"
                    android:checked="true"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal6Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCheck5Title">

            <TextView
                android:id="@+id/valorCreditoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_6"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/valorCreditoInputLayout"
            style="@style/Form.InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/zero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal6Title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/valorCreditoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:textColor="@color/input_text_color"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layoutTextoLegal7Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/valorCreditoInputLayout">

            <TextView
                android:id="@+id/textoLegal7Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/registrar_inventario_codigo_pregunta_7"
                android:textColor="@color/text_title_detail"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCheck7Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal7Title">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/contadoresCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Coljuegos.CheckBox"
                    android:layout_marginTop="0dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- SECCIÓN DE CONTADORES MET (OCULTA POR DEFECTO) -->
        <TextView
            android:id="@+id/contadoresMetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/registrar_inventario_contadores_met"
            android:textColor="@color/fragment_subtitle_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCheck7Title"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/layoutContadoresMet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contadoresMetTitle"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/layoutTextoLegal8Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <TextView
                    android:id="@+id/metCoinInTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/registrar_inventario_codigo_pregunta_8"
                    android:textColor="@color/text_title_detail"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/coinInMetInputLayout"
                style="@style/Form.InputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/registrar_inventario_codigo_valor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal8Title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/coinInMetEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layoutTextoLegal9Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coinInMetInputLayout">

                <TextView
                    android:id="@+id/metCoinOutTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/registrar_inventario_codigo_pregunta_9"
                    android:textColor="@color/text_title_detail"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/coinOutMetInputLayout"
                style="@style/Form.InputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/registrar_inventario_codigo_valor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutTextoLegal9Title">

                <com.google.android.material.textfield.TextInputEditText

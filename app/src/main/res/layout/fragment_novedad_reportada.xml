<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    tools:context=".ui.establecimiento.novedad.NovedadReportadaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/novedad_reportada_subtitle"
            android:textColor="@color/fragment_subtitle_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Botón Agregar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregar"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/novedad_reportada_agregar"
            app:icon="@android:drawable/ic_input_add"
            app:backgroundTint="@color/login_button_color_init"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle" />

        <!-- Título de novedades registradas -->
        <TextView
            android:id="@+id/tvNovedadesRegistradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/novedad_registrada_titulo"
            android:textColor="@color/fragment_subtitle_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAgregar" />

        <!-- RecyclerView de novedades registradas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerNovedadesRegistradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNovedadesRegistradas"
            tools:itemCount="2"
            tools:listitem="@layout/item_novedad_reportada" />

        <!-- Botones de navegación -->
        <LinearLayout
            android:id="@+id/layoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerNovedadesRegistradas">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnterior"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:paddingVertical="16dp"
                android:text="@string/novedad_reportada_anterior"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:strokeColor="@color/login_button_color_init"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingVertical="16dp"
                android:text="@string/novedad_reportada_siguiente"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/login_button_color_init"
                app:cornerRadius="8dp"
                app:elevation="4dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Icono de sincronización -->
    <ImageView
        android:id="@+id/sync_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_sync"
        android:layout_marginTop="32dp"
        app:tint="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maestros_sincronizacion_titulo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sync_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maestros_sincronizacion_descripcion"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card de información -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/description_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Estado de sincronización -->
            <TextView
                android:id="@+id/status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maestros_estado"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maestros_estado_pendiente"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:layout_marginVertical="12dp" />

            <!-- Última actualización -->
            <TextView
                android:id="@+id/last_sync_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maestros_ultima_actualizacion"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_sync_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maestros_nunca_sincronizado"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sync_button"
        android:layout_marginVertical="24dp" />

    <!-- Mensaje de estado -->
    <TextView
        android:id="@+id/status_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sync_button"
        android:layout_marginVertical="24dp"
        tools:text="Sincronizando maestros..." />

    <!-- Botón de sincronización -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sync_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/maestros_sincronizar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/force_update_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Botón de actualización forzada -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/force_update_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/maestros_forzar_actualizacion"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>